<UserControl x:Class="Apv.MemberExcel.Views.ExportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:Apv.MemberExcel.Views"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance views:ExportViewModel}">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

        <Button Content="E-Mail-Auszug erstellen" Command="{Binding ExportEmailsCommand}" Margin="8"/>

        <Button Content="Adress-Auszug erstellen" Command="{Binding ExportAddressesCommand}" Margin="8"/>
        
        <Button Content="V-Cards erstellen" Command="{Binding ExportVCardsCommand}" Margin="8"/>

    </StackPanel>
</UserControl>
